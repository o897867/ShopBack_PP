# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database - Configure for your production database
DATABASE_URL=sqlite:///data/shopback_data.db
# DATABASE_URL=postgresql://shopback_user:secure_password@db:5432/shopback

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=4
CORS_ORIGINS=https://yourdomain.com

# Frontend
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_APP_ENV=production

# Email Configuration - CHANGE THESE VALUES
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@yourdomain.com

# Scraping
SCRAPE_INTERVAL_HOURS=6
MAX_CONCURRENT_SCRAPES=5

# Security - CHANGE THESE VALUES BEFORE DEPLOYMENT
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_IN_PRODUCTION
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_JWT_SECRET_IN_PRODUCTION

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Monitoring
ENABLE_METRICS=true
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=12
BACKUP_RETENTION_DAYS=30