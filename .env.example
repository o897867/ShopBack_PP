# ShopBack Application Environment Variables
# Copy this file to .env and customize for your environment

# ===========================================
# APPLICATION SETTINGS
# ===========================================
ENVIRONMENT=development
APP_NAME=ShopBack Management Platform
APP_VERSION=1.0.0
DEBUG=true

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For SQLite (development)
DATABASE_URL=sqlite:///data/shopback_data.db

# For PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/shopback
# POSTGRES_DB=shopback
# POSTGRES_USER=shopback_user
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_HOST=db
# POSTGRES_PORT=5432

# ===========================================
# API CONFIGURATION
# ===========================================
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=4
LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
VITE_API_BASE_URL=http://localhost:8001
VITE_APP_ENV=development
VITE_APP_TITLE=ShopBack Management

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourdomain.com

# ===========================================
# SCRAPING CONFIGURATION
# ===========================================
SCRAPE_INTERVAL_HOURS=6
MAX_CONCURRENT_SCRAPES=5
REQUEST_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ===========================================
# SECURITY SETTINGS
# ===========================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_EXPIRE_MINUTES=60

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=120

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30
ENABLE_METRICS=true
METRICS_PORT=9090

# ===========================================
# CACHE CONFIGURATION (if using Redis)
# ===========================================
# REDIS_URL=redis://redis:6379/0
# REDIS_PASSWORD=
# CACHE_TTL=3600

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# TRADINGVIEW_API_KEY=your_key_here
# WEBHOOK_SECRET=your_webhook_secret

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=/app/backups